<div class="container py-5">
  <h3 class="mb-4 text-secondary">Welcome, <%= current_user.email %>!</h3>

  <% if current_user.admin? %>
    <!-- Admin Dashboard Content -->
    <!-- ... existing admin content ... -->

  <% elsif current_user.client? %>
    <!-- Client Dashboard Content -->
    <div class="card shadow mb-4 animated">
      <div class="card-header bg-secondary text-white">
        Client Dashboard
      </div>
      <div class="card-body">
        <%= link_to 'Create New Task', new_task_path, class: "btn btn-outline-secondary mb-3" %>
        
        <h4 class="text-secondary">Your Tasks</h4>
        <!-- ... existing tasks table ... -->
      </div>
    </div>

    <!-- Completed Tasks -->
    <div class="card shadow mb-4 animated">
      <div class="card-header bg-success text-white">
        Completed Tasks
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Budget</th>
              <th>Category</th>
              <th>Deadline</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.tasks_as_client.completed.each do |task| %>
              <tr>
                <td><%= link_to task.title, task_path(task) %></td>
                <td><%= task.description %></td>
                <td><%= task.budget %></td>
                <td><%= task.category %></td>
                <td><%= task.deadline %></td>
                <td><%= task.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Tasks Under Review -->
    <div class="card shadow mb-4 animated">
      <div class="card-header bg-warning text-white">
        Tasks Under Review
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Budget</th>
              <th>Category</th>
              <th>Deadline</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.tasks_as_client.under_review.each do |task| %>
              <tr>
                <td><%= link_to task.title, task_path(task) %></td>
                <td><%= task.description %></td>
                <td><%= task.budget %></td>
                <td><%= task.category %></td>
                <td><%= task.deadline %></td>
                <td><%= task.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Your Reviews Section -->
    <!-- ... existing reviews content ... -->

  <% elsif current_user.freelancer? %>
    <!-- Freelancer Dashboard Content -->
    <div class="card shadow mb-4 animated">
      <div class="card-header bg-secondary text-white">
        Freelancer Dashboard
      </div>
      <div class="card-body">
        <h4 class="text-secondary">Available Tasks</h4>
        <!-- ... existing tasks table ... -->
      </div>
    </div>

    <!-- Completed Tasks -->
    <div class="card shadow mb-4 animated">
      <div class="card-header bg-success text-white">
        Completed Tasks
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Budget</th>
              <th>Category</th>
              <th>Deadline</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.tasks_as_freelancer.completed.each do |task| %>
              <tr>
                <td><%= link_to task.title, task_path(task) %></td>
                <td><%= task.description %></td>
                <td><%= task.budget %></td>
                <td><%= task.category %></td>
                <td><%= task.deadline %></td>
                <td><%= task.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Tasks Under Review -->
    <div class="card shadow mb-4 animated">
      <div class="card-header bg-warning text-white">
        Tasks Under Review
      </div>
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Budget</th>
              <th>Category</th>
              <th>Deadline</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.tasks_as_freelancer.under_review.each do |task| %>
              <tr>
                <td><%= link_to task.title, task_path(task) %></td>
                <td><%= task.description %></td>
                <td><%= task.budget %></td>
                <td><%= task.category %></td>
                <td><%= task.deadline %></td>
                <td><%= task.status %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Your Reviews -->
    <!-- ... existing reviews content ... -->
  <% end %>

  <style>
    /* Simple fade-in animation */
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    .animated {
      animation-name: fadeIn;
      animation-duration: 1.5s;
    }
  </style>
</div>
