<!-- app/views/reviews/new.html.erb -->

<h2>New Review for <%= @task.title %></h2>

<%= form_for([@task, @review]) do |f| %>
  <%= render "devise/shared/error_messages", resource: @review %>

  <div class="field">
    <%= f.label :rating %><br>
    <%= f.number_field :rating %>
  </div>

  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit "Create Review" %>
  </div>
<% end %>
