<div class="login-container" style="background-image: url('<%= image_path('login.png') %>'); background-size: cover; background-repeat: no-repeat; background-position: center;">
  <div class="login-form">
    <h2 style="text-align: center; margin-bottom: 1.5rem;">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: 'control-label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <div class="checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style>
  .login-container {
    width: auto;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden; /* This will prevent any overflow from the container */
  }

  .login-form {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.85);
    border-radius: 0.5rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
    margin: auto;
    background: rgba(250, 245, 235, 0.85); /* A light background color to give a parchment-like feel */

  }

  .form-control {
    margin-bottom: 1rem;
  }

  .btn-primary {
    background-color: #0056b3;
    border-color: #0056b3;
  }
  
  .btn-primary:hover {
    background-color: #007bff;
    border-color: #007bff;
  }
  
  .form-horizontal .checkbox {
    padding-left: 20px;
  }

  .btn-primary:hover {
  background-color: #8d6e63; /* A darker, richer brown for the hover state */
  border-color: #8d6e63;
  }
</style>
