<%= form_with(model: task, local: true, html: { multipart: true }) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Hidden field for the user (client) ID -->
  <%= form.hidden_field :client_id, value: current_user.id %>

  <!-- Wrap the form in a container and add a title -->
  <div class="container">
    <h1 class="text-center">Create a new task</h1>

    <div class="field">
      <%= form.label :title, class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <%= form.text_field :title, class: 'form-control', placeholder: 'Enter a catchy title for your task' %>
    </div>

    <div class="field">
      <%= form.label :description, class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <%= form.text_area :description, class: 'form-control', placeholder: 'Enter a detailed description of your task' %>
    </div>

    <div class="field">
      <%= form.label :budget, class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <%= form.hidden_field :budget %><!-- Change this to a hidden_field -->
    </div>

    <!-- Add an input element for the number of pages -->
    <div class="field">
      <%= label_tag :pages, 'Number of pages:', class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <%= number_field_tag :pages, 1, min: 1, onchange: 'calculatePrice()', class: 'form-control' %>
    </div>

    <!-- Add an input element for the price -->
    <div class="field">
      <%= label_tag :price, 'Price:', class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <%= number_field_tag :price, nil, disabled: true, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :category, class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <%= form.text_field :category, class: 'form-control', placeholder: 'Enter a category for your task' %>
    </div>

    <div class="field">
      <%= form.label :deadline, class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <%= form.datetime_select :deadline, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :attachment, 'File Attachment', class: 'form-label', style: 'margin-bottom: 0.5rem;' %>
      <div class="custom-file">
        <%= form.file_field :attachment, class: 'custom-file-input', id: 'customFile' %>
        <%= form.label :attachment, 'Choose file', class: 'custom-file-label', for: 'customFile' %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit 'Create Task', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  </div> <!-- End of container -->
<% end %> <!-- End of form -->

<script>
  // Define a constant for the cost per page
  const COST_PER_PAGE = 30;

  // Define a function that calculates and displays the price based on the number of pages
  function calculatePrice() {
    // Get the number of pages from the input element
    let pages = document.getElementById("pages").value;

    // Calculate the price by multiplying the number of pages by the cost per page
    let price = pages * COST_PER_PAGE;

    // Display and assign the price in the input elements
    document.getElementById("price").value = price;
    document.getElementById("task_budget").value = price; // Assign the price to the budget field
  }

  // Call the function once when the page loads, to show and assign the initial price
  calculatePrice();
</script>
