<%= form_with(model: task, local: true, html: { class: 'needs-validation', novalidate: true, multipart: true }) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prevented this task from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Enter task title' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows: 3, placeholder: 'Task description' %>
  </div>

  <div class="form-group">
    <%= form.label :budget %>
    <%= form.number_field :budget, class: 'form-control', placeholder: 'Budget for task' %>
  </div>

  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.datetime_select :deadline, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :attachment %>
    <%= form.file_field :attachment, class: 'form-control-file' %>
  </div>

  <!-- Payment Confirmation Section -->
  <div class="form-group">
    <%= form.label :payment_confirmation, "Have you made the payment?" %>
    <%= form.check_box :payment_made, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Task', class: 'btn btn-primary btn-block', data: { confirm: "Have you completed the payment process?" } %>
  </div>
<% end %>
