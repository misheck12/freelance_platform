<div class="task-details">
  <h1 class="display-4"><%= @task.title %></h1>

  <div class="card">
    <div class="card-body">
      <p class="card-text">
        </p>

      <% if current_user.admin? %>
        <%= link_to "Approve Task", approve_task_path(@task), method: :patch, class: "btn btn-success" %>
        <%= link_to "Reject Task", reject_task_path(@task), method: :patch, class: "btn btn-danger" %>
      <% end %>

      <% if current_user == @task.client %>
        <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-secondary" %>
      <% end %>

      <%# Other conditional actions based on user roles and task status, using `if current_user` checks %>

      <% if current_user == @task.client || current_user.admin? %>
        <%= link_to "Delete Task", task_path(@task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger mt-2' %>
      <% end %>

      <%= link_to 'Back', dashboard_show_path, class: 'btn btn-secondary mt-2' %>
    </div>
  </div>
</div>
